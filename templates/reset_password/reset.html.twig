{% extends 'base.html.twig' %}

{% block title %}réinitialisez votre mot de passe{% endblock %}

{% block body %}
<section id="page_registration" class="flex-center">
    <h2>réinitialisez votre mot de passe</h2>
        {{ form_start(resetForm, {'attr': {'id': 'forms'}}) }}
            {{ form_row(resetForm.plainPassword, {'attr': {'class': 'field'}}) }}
            <div id="password-requirements">
                <h6>Exigences du mot de passe : </h6>
                    <span class="requirement caractere">-Au moins un caractère spécial (!@#$%^&*()[]{};:<>|./?)</span><br>
                    <span class="requirement majuscule">-Au moins une lettre majuscule</span><br>
                    <span class="requirement minuscule">-Au moins une lettre minuscule</span><br>
                    <span class="requirement chiffre">-Au moins un chiffre</span><br>
                    <span class="requirement longueur">-Minimum 12 caractères</span>
            </div>
            <button class="button">Valider</button>
        {{ form_end(resetForm) }}
</section>
{% endblock %}
